.work, .item
  > .thumbnail
    display table
    margin-bottom 0
    width 100%
    .caption
      display table-cell
      width 100%
      height 18em
      vertical-align middle
      text-align center
      h3
        width 100%
        margin 0

.selectImage
  .thumbnail
    img
      width 100%
  form
    margin-bottom 1em
    label
      margin-right 0.4em

#workForm, #editItem
  .image
    img
      width 100%
    .glyphicon-picture
      margin-top 1em
      font-size 3em
      color #777777
      cursor pointer
      &:hover
        color #000000

#setMissingImages
  h2
    small
      display block
  .thumbnail
    img
      width 100%
    .glyphicon-picture
      margin 1em 0
      font-size 3em
  form.form-inline
    margin-bottom 1em
    .checkbox
      margin-right 1em
  .selection
    margin-top 1em
